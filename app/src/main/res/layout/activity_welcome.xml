<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_dialog"
        android:layout_width="@dimen/_373sdp"
        android:layout_height="@dimen/_208sdp"
        android:layout_marginTop="@dimen/_54sdp"
        android:background="@color/welcomeBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/text_title"
                style="@style/MainPrimaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/imageView_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="@dimen/_258sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/welcomeName"
            android:textSize="@dimen/_20ssp"
            android:marqueeRepeatLimit="-1"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:typeface="monospace"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
                app:layout_constraintVertical_bias="0.3"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/white30"
            app:layout_constraintBottom_toTopOf="@+id/text_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="@dimen/_51sdp"
            android:layout_height="@dimen/_49sdp"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:typeface="monospace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_description"
            app:layout_constraintTop_toTopOf="@+id/text_description"/>

        <TextView
            android:id="@+id/text_description"
            style="@style/MainPrimaryText"
            android:layout_width="@dimen/_278sdp"
            android:layout_height="@dimen/_57sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout2" />

    </android.support.constraint.ConstraintLayout>

    <include
            android:id="@+id/view_note"
            layout="@layout/view_bottom_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    <com.ufistudio.hotelmediabox.views.DateView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>