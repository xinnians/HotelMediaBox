<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_52sdp"
            android:background="@color/block30"
            android:layout_gravity="bottom">

        <TextView
                android:id="@+id/textView_subtitle"
                style="@style/ContentTitle"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center"
                android:text="123"
                android:textSize="@dimen/_13ssp"
                android:ellipsize="end"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/exo_position"
                android:visibility="visible"
                android:lines="1"/>

        <TextView
                android:id="@id/exo_position"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11ssp"
                android:gravity="center"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/textView_subtitle"
                app:layout_constraintBottom_toBottomOf="@+id/textView_subtitle"
                app:layout_constraintStart_toEndOf="@+id/textView_subtitle"
                app:layout_constraintEnd_toStartOf="@+id/exo_progress"/>

        <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_subtitle"
                app:layout_constraintEnd_toStartOf="@+id/exo_duration"
                app:layout_constraintStart_toEndOf="@+id/exo_position"
                app:played_color="@color/colorYellow"
                app:unplayed_color="@android:color/black"
                app:buffered_color="@android:color/darker_gray"/>

        <TextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@+id/textView_subtitle"
                app:layout_constraintBottom_toBottomOf="@+id/textView_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/exo_progress"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>