<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/view_bottom_back_home"
        layout="@layout/view_bottom_back_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_watch_movie"
        style="@style/NoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_14sdp"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintTop_toTopOf="@+id/imageView_watch_movie"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_watch_movie"
        app:layout_constraintEnd_toStartOf="@+id/view_bottom_back_home" />

    <ImageView
        android:id="@+id/imageView_watch_movie"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView_watch_movie" />
</android.support.constraint.ConstraintLayout>