<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@android:color/black</item>

        <item name="android:typeface">serif</item>
    </style>

    <style name="MainPrimaryText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/block40</item>
    </style>

    <style name="ContentTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ContentText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="PageCurrent">
        <item name="android:textColor">@color/homeIconFrameFocused</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginBottom">@dimen/_1sdp</item>
    </style>

    <style name="PageTotal">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
    </style>

    <style name="HomePageItemTitle">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NoteText">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
